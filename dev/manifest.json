{
  "manifest_version": 3,
  "name": "Bookmarks Pro",
  "version": "1.0",
  "description": "A modern bookmark manager that works both as a web app and Chrome extension",
  "permissions": ["bookmarks"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}